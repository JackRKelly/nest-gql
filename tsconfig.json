{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@data/*": [
        "./src/data/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ]
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./dist",
    "./node_modules"
  ]
}
